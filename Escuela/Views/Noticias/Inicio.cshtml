@model PaginatedList<Noticia>

@{
    ViewData["Title"] = "Noticias";
}

<h1>@ViewData["Title"] <i class="far fa-newspaper"></i></h1>
<hr>


@for (int i = 0; i < Model.Count; i+=2)
{
    <div class="row">
        <div class="col-md-6 mb-3">
            <a asp-action="Detalles" asp-route-id="@Model[i].IdNoticia" asp-route-numeroDePagina="@Model.PageIndex" class="link-dark h3">
                @Model[i].Titulo
            </a>
            <div class="texto-truncado-5 mb-2 mt-2">
                @Model[i].Cuerpo
            </div>
            <small class="text-muted">
                Categor&iacute;a: @Model[i].CategoriaNoticia.Nombre <br>
                Autor: @(Model[i].ApplicationUser.Nombres + " " +
            Model[i].ApplicationUser.PrimerApellido + " " +
            Model[i].ApplicationUser.SegundoApellido) <br>
                Publicado: @Model[i].FechaPublicacion <br>
                @if(Model[i].FechaPublicacion < Model[i].FechaEdicion){
                    @:Editado: @Model[i].FechaEdicion
                }
            </small>
            <br class="mb-3">
        </div>

        <div class="col-md-6">
            @if ((i + 1) != Model.Count)
            {
                <a asp-action="Detalles" asp-route-id="@Model[i+1].IdNoticia" asp-route-numeroDePagina="@Model.PageIndex" class="link-dark h3">
                    @Model[i+1].Titulo
                </a>
                <div class="texto-truncado-5 mb-2 mt-2">
                    @Model[i+1].Cuerpo
                </div>
                <small class="text-muted">
                    Categor&iacute;a: @Model[i+1].CategoriaNoticia.Nombre <br>
                    Autor: @(Model[i+1].ApplicationUser.Nombres + " " +
            Model[i+1].ApplicationUser.PrimerApellido + " " +
            Model[i+1].ApplicationUser.SegundoApellido) <br>
                    Publicado: @Model[i+1].FechaPublicacion <br>
                    @if(Model[i+1].FechaPublicacion < Model[i+1].FechaEdicion){
                    @:Editado: @Model[i+1].FechaEdicion
                }
                </small>
                <br class="mb-3">
            }
        </div>
    </div>
}

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<div class="mt-3">
<a asp-action="Inicio"
   asp-route-numeroDePagina="@(Model.PageIndex - 1)"
   class="btn btn-outline-primary @prevDisabled">
    Anterior
</a>
<a asp-action="Inicio"
   asp-route-numeroDePagina="@(Model.PageIndex + 1)"
   class="btn btn-outline-primary @nextDisabled">
    Siguiente
</a>
</div>

@section css{
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
}