@model List<PreguntaFrecuente>

@{
    ViewData["Title"] = "Preguntas Frecuentes";
}

<div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">
        <p class="h1 mt-3 mb-2">
        <strong class="mb-3">@ViewData["Title"] <i class="fa fa-question-circle" aria-hidden="true"></i>
</strong>
            @if (ViewBag.mostrarbotonagregarpregunta)
            {
            <a asp-area="Administracion" asp-controller="PreguntaFrecuente" asp-action="Agregar"
            class="btn btn-outline-dark">Agregar</a>
            }
        </p>
        <div class="accordion" id="accordionSi">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="accordion-item">
                    <h2 class="accordion-header" id="@("heading" + i)">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#@("collapse" + i)" aria-expanded="true" aria-controls="@("collapse" + i)">
                            @Model[i].Pregunta
                        </button>
                    </h2>
                    <div id="@("collapse" + i)" class="accordion-collapse collapse @Html.Raw(i == 0 ? "show" : "")"
                    aria-labelledby="@("heading" + i)" data-bs-parent="#accordionSi">
                        <div class="accordion-body">
                            @Model[i].Respuesta
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-2">

    </div>
</div>

@section css{
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
}