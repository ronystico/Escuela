@model IEnumerable<Escuela.Models.CategoriaNoticia>

@{
    ViewData["Title"] = "Lista de Categor√≠as Noticia";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary" asp-action="Agregar">Agregar</a>
@if (ViewBag.error != null)
{
    <p class="text-danger mt-3">@ViewBag.error</p>
}
<hr />

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            <a asp-action="Editar" asp-route-id="@item.IdCategoriaNoticia">Editar</a><br>
                            <a asp-action="Eliminar" asp-route-id="@item.IdCategoriaNoticia">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
