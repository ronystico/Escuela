@model IEnumerable<Asignatura>
@{
    ViewData["Title"] = "Lista de Asignaturas";
}

<h1>@ViewData["Title"]</h1>

<a class="btn btn-primary mb-3" asp-action="Agregar">Agregar</a>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var curso in Model.ToList())
                {
                    <tr>
                        <td>@curso.Nombre</td>
                        <td>
                            <a class="link-primary" asp-action="Editar" asp-route-id="@curso.IdAsignatura">Editar</a> <br>
                            <a class="link-primary" asp-action="Eliminar" asp-route-id="@curso.IdAsignatura">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>