@model AgregarCursoPeriodoViewModel
@{
    ViewData["Title"] = "Agregar Periodo/Curso/Asignaturas";
}

<h1 class="mb-3">@ViewData["Title"]</h1>


<form method="POST" asp-action="Agregar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="IdPeriodo" class="form-label"></label>
                <select asp-for="IdPeriodo" asp-items="@ViewBag.periodos" class="form-select"></select>
                <span asp-validation-for="IdPeriodo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IdCurso" class="form-label"></label>
                <select asp-for="IdCurso" asp-items="@ViewBag.cursos" class="form-select"></select>
                <span asp-validation-for="IdCurso" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="AsignaturasSeleccionadas" class="form-label"></label>
                @foreach (var asignatura in ViewBag.asignaturas)
                {
                    <div class="form-check">
                        <input type="checkbox" name="AsignaturasSeleccionadas" value="@asignatura.Value" checked="@asignatura.Selected" class="form-check-input" />
                        <label class="form-check-label">@asignatura.Text</label> <br />
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-primary" value="Agregar" />
    </div>
</form>
    

<div>
    <a asp-action="Inicio" class="btn btn-primary">Volver a la Lista</a>
</div>

@section Scripts {
@{
    <partial name="_ValidationScriptsPartial" />
}
}