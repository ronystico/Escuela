@model DetalleCursoPeriodo
@{
    ViewData["Title"] = "Revocar Asignaturas";
}

<h1>@ViewData["Title"]</h1>
<hr>

<span class="text-danger">Â¿Desea revocar la asignaci&oacute;n de calificaciones?</span>
<span class="text-danger">
    Los docentes dejar&aacute;n de tener acceso a las asignaturas del siguiente Periodo/Curso
</span>

<p class="mt-3"><strong>Periodo/Subperiodo:</strong> @(Model.Periodo.Nombre + " / " + Model.Periodo.Subperiodo)</p>
<p><strong>Curso/Secci&oacute;n:</strong> @(Model.Curso.Nombre + " / " + Model.Curso.Seccion)</p>

<h2>Asignaturas</h2>
<ul class="list-group list-group-flush">
@foreach (var item in Model.DetalleCursoperiodoAsignatura)
{
    <li class="list-group-item">@item.Asignatura.Nombre</li>
}
</ul>

<form asp-action="RevocarAsignaturas" class="form-group mt-3">
    <input type="hidden" asp-for="IdDetalleCursoPeriodo" />
    <input type="submit" value="Revocar" class="btn btn-danger" asp-route-id="@Model.IdDetalleCursoPeriodo" />
</form>

<div>
    <a asp-action="Inicio" class="btn btn-primary">Volver a la lista</a>
</div>