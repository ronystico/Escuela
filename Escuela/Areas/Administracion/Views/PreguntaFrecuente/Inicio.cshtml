@model IEnumerable<Escuela.Models.PreguntaFrecuente>

@{
    ViewData["Title"] = "Lista de Preguntas Frecuentes";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Agregar" class="btn btn-primary">Agregar</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pregunta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Respuesta)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pregunta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Respuesta)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.IdPreguntaFrecuente">Editar</a><br>
                <a asp-action="Eliminar" asp-route-id="@item.IdPreguntaFrecuente">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
