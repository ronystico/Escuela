@model Escuela.Models.PreguntaFrecuente

@{
    ViewData["Title"] = "Eliminar Pregunta Frecuente";
}

<h1>@ViewData["Title"]</h1>
<span class="text-danger">¿Desea eliminar la siguiente pregunta frecuente?</span>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pregunta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pregunta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Respuesta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Respuesta)
        </dd>
    </dl>
    
    <form asp-action="Eliminar">
        <input type="hidden" asp-for="IdPreguntaFrecuente" />
        <input type="submit" value="Eliminar" class="btn btn-danger" asp-route-id="@Model.IdPreguntaFrecuente" />
        <a asp-action="Inicio" class="btn btn-primary">Volver a la lista</a>
    </form>
</div>
