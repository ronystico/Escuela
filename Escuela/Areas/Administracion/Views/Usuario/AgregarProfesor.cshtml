@model AgregarProfesorViewModel
@{ ViewData["Title"] = "Agregar Profesor"; }

<h1>@ViewData["Title"]</h1>


<form method="POST" asp-action="AgregarProfesor">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="Asignaturas" class="requerido">Periodo/Subperiodo - Curso/Seccion - Asignatura</label>
                @foreach (var periodoSubperiodoCursoSeccionAsignatura in ViewBag.asignaturas)
                {
                    <div class="form-check">
                        <input type="checkbox"
                               name="IdDetalleCursoperiodoAsignatura"
                               value="@periodoSubperiodoCursoSeccionAsignatura.Value"
                               class="form-check-input" />
                        <label class="form-check-label">@periodoSubperiodoCursoSeccionAsignatura.Text</label>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" asp-route-id="@ViewBag.id" value="Agregar profesor" />
    </div>
</form>
    

<div>
    <a asp-action="Inicio" class="btn btn-primary">No agregar asignaturas</a>
</div>

    @section Scripts{
        @{
            <partial name="_ValidationScriptsPartial" /> }
    }
