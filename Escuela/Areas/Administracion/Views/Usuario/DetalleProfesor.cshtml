@model ApplicationUser
@{
    ViewData["Title"] = "Detalle Profesor";
}

<h1 class="mb-3">@ViewData["Title"]</h1>
<hr />

<div class="container">

    <dl class="row">
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.PrimerApellido)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.PrimerApellido)
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.SegundoApellido)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.SegundoApellido)
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class="col-sm-2 mb-3">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10 mb-3">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2 mb-3">
            Rol
        </dt>
        <dd class="col-sm-10 mb-3">
            @ViewBag.roles
        </dd>
    </dl>
</div>

<h2 class="mb-3">Cursos/Asignaturas</h2>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th scope="col">Curso</th>
            <th scope="col">Sección</th>
            <th scope="col">Asignatura</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cursoasignatura in Model.DetalleProfesorCursosAsignatura)
        {
            <tr>
                <td>@cursoasignatura.DetalleCursosAsignatura.Curso.Nombre</td>
                <td>@cursoasignatura.DetalleCursosAsignatura.Curso.Seccion</td>
                <td>@cursoasignatura.DetalleCursosAsignatura.Asignatura.Nombre</td>
            </tr>
        }

    </tbody>
</table>

<div>
    <a class="btn btn-warning" asp-action="EditarProfesor" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-primary" asp-action="Inicio">Volver Atrás</a>
</div>