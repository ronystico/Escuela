@model InicioCarouselViewModel
@{
    ViewData["Title"] = "Agregar Imagen";
}

<h1>@ViewData["Title"]</h1>

<p>Va a agregar la imagen n&uacute;mero: @(ViewBag.cantidadexistente + 1)</p>
<p>Si desea reemplazar un n&uacute;mero existente, edite desde la lista</p>
<p>Formatos admitidos: .jpg .jpeg .png</p>
<hr>

<form enctype="multipart/form-data" method="post">
<div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Imagen"></label>
        <input type="file" asp-for="ImagenParaSubir" class="form-control-file" />
        <span asp-validation-for="ImagenParaSubir" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-page-handler="Agregar" type="submit" value="Agregar" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Inicio" class="btn btn-primary">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
