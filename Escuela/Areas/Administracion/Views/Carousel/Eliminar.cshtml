@model InicioCarouselViewModel
@{
    ViewData["Title"] = "Eliminar Imagen";
}

<h3>Â¿Desea eliminar la siguiente imagen?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                N&uacute;mero de Imagen
            </dt>
            <dd class="col-sm-10 mb-3">
                @ViewBag.imagenactual
            </dd>
        </dl>
        <div class="mb-3">
            <p><strong>Vista Previa</strong></p>
            <img src="data:image/jpg;base64,@Convert.ToBase64String(@Model.Imagen)" class="img-thumbnail h-25 w-25" />
        </div>


        <form asp-action="Eliminar" class="mb-3">
            <input asp-route-id="@ViewBag.imagenactual" type="submit" value="Eliminar" class="btn btn-danger" />
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Inicio">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
