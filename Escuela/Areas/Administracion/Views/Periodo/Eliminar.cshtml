@model Escuela.Models.Periodo

@{
    ViewData["Title"] = "Eliminar Periodo";
}

<h3>¿Desea eliminar el siguiente periodo?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Subperiodo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Subperiodo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaFin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>
        </dl>
        <form asp-action="Eliminar" class="mb-3">
            <input type="hidden" asp-for="IdPeriodo" />
            <input type="submit" value="Eliminar" class="btn btn-danger" asp-route-id="@Model.IdPeriodo" />
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Inicio">Volver a la lista</a>
</div>