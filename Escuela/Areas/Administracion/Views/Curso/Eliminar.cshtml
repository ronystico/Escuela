@model Escuela.Models.Curso

@{
    ViewData["Title"] = "Eliminar Curso";
}

<h3>¿Desea eliminar el siguiente curso?</h3>
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Seccion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Seccion)
            </dd>
        </dl>

        <form asp-action="Eliminar" class="form-group">
            <input type="hidden" asp-for="IdCurso" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </form>
    </div>
    </div>

<div>
    <a class="btn btn-primary" asp-action="Inicio">Volver a la lista</a>
</div>