@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Input.Usuario"></label>
                    <input asp-for="Input.Usuario" class="form-control" />
                    <span asp-validation-for="Input.Usuario" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Clave"></label>
                    <input asp-for="Input.Clave" class="form-control" />
                    <span asp-validation-for="Input.Clave" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.Recordarme">
                            <input asp-for="Input.Recordarme" />
                            @Html.DisplayNameFor(m => m.Input.Recordarme)
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Iniciar Sesión" />
                </div>

            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}